# 斗地主游戏环境配置示例
# 复制此文件为 .env 并修改配置

# 服务器设置
PORT=8000
HOST=0.0.0.0
DEBUG=false

# 数据库设置
DATABASE_URL=sqlite:///data/game_scores.db

# 游戏设置
MAX_PLAYERS_PER_ROOM=3
AI_DIFFICULTY=medium  # easy, medium, hard
GAME_TIMEOUT=300  # 游戏超时时间（秒）

# 日志设置
LOG_LEVEL=INFO
LOG_FILE=logs/game_server.log

# WebSocket设置
WEBSOCKET_PING_INTERVAL=30
WEBSOCKET_PING_TIMEOUT=120

# 安全设置
CORS_ORIGINS=*  # 生产环境应设置为具体域名
API_KEY=  # 可选API密钥

# 性能设置
WORKERS=4  # Gunicorn工作进程数